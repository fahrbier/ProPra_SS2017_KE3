<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gens.lsystems.BuilderGenController">
   <center>
      <GridPane maxHeight="-Infinity" maxWidth="-Infinity" 
                minHeight="-Infinity" minWidth="-Infinity" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="100.0"  />
          <RowConstraints minHeight="10.0" prefHeight="100.0" />
        </rowConstraints>
         <children>
            <Label text="Alphabet"        GridPane.rowIndex="0" GridPane.columnIndex="0">
               <GridPane.margin>
                  <Insets left="10.0" />
               </GridPane.margin>
            </Label>
            <Label text="Axiom"        GridPane.rowIndex="1" GridPane.columnIndex="0">
               <GridPane.margin>
                  <Insets left="10.0" />
               </GridPane.margin>
            </Label>
            <Label text="Rules"        GridPane.rowIndex="2"    GridPane.columnIndex="0">
               <GridPane.margin>
                  <Insets left="10.0" />
               </GridPane.margin>
            </Label>
            <Label text="add Rule"      GridPane.rowIndex="3"    GridPane.columnIndex="0">
               <GridPane.margin>
                  <Insets left="10.0" />
               </GridPane.margin>
            </Label>
            <Label text="Angle"      GridPane.rowIndex="4"    GridPane.columnIndex="0">
               <GridPane.margin>
                  <Insets left="10.0" />
               </GridPane.margin>
            </Label>
             <Label text="Start Stroke Length"      GridPane.rowIndex="5"    GridPane.columnIndex="0">
               <GridPane.margin>
                  <Insets left="10.0" />
               </GridPane.margin>
            </Label>           
            


            
            <TextField fx:id="alphabet"     GridPane.rowIndex="0"    GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
            </TextField>                        
                                                
            <TextField fx:id="axiom"     GridPane.rowIndex="1"    GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
            </TextField>

            <Label fx:id="rules"      GridPane.rowIndex="2"    GridPane.columnIndex="0">
               <GridPane.margin>
                  <Insets left="10.0" />
               </GridPane.margin>
            </Label>            
                                    
            <TextField fx:id="rule"   GridPane.rowIndex="3" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
            </TextField>           
            

            
            <Button fx:id="buttonAddRule" GridPane.rowIndex="3" GridPane.columnIndex="2" onAction="#handleAddRule" text="_add rule">
               <GridPane.margin>
                   <Insets right="10.0" />
               </GridPane.margin>
            </Button>

            <TextField fx:id="angle"     GridPane.rowIndex="4"    GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
            </TextField>
                        
            <TextField fx:id="stroke"     GridPane.rowIndex="5"    GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
            </TextField>
                                                                                    
         </children>
      </GridPane>
   </center>
   <bottom>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
             <Button fx:id="buttonGenerate" onAction="#handleGenerate" text="_Generate" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="15.0" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
